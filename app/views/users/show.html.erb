<div class="container px-5">
  <div class="row">
    <div class="col-md-3">
      <h2 class="mt-3">User info</h2>
        <%= render 'user_info', user: @user %>
      
      <h2 class="mt-3">New Book</h2>
        <%= render 'books/new_book', book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">Books</h2>
      <table class="table">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        
        <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(@user) do %>
              <%= image_tag @user.get_profile_image(50,50) %>
            <% end %>
          </td>
          <td>
            <%= link_to book.title, book_path(book) %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>