<div class="container px-5">
  <div class="row">
    <div class="col-md-3">
      <h2 class="mt-3">User info</h2>
        <%= render 'user_info', user: @user %>
      
      <h2 class="mt-3">New Book</h2>
        <%= render 'books/new_book', book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">Users</h2>
      <table class="table">
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td><%= link_to 'Show', user_path(user) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>