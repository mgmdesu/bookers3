<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  
  <% books.each do |book| %>
  <tbody>
    <tr>
      <td>
        <%= image_tag book.user.get_profile_image(50,50) %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
    </tr>
  </body>
  <% end %>
</table>