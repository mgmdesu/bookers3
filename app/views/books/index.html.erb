<h2>New Book</h2>
  <%= form_with model:@book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>
  
<h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    
    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
          </td>
        <td><%= book.body %></td>
      </tr>
    </body>
  </table>
  <% end %>